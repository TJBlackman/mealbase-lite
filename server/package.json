    "@types/mongoose": "^5.5.43",
    "@types/node": "^13.5.0",
    "@types/passport": "^1.0.2",
    "@types/passport-facebook": "^2.1.9",
    "@types/passport-local": "^1.0.33",
    "@types/puppeteer-core": "^2.0.0",
    "nodemon": "^2.0.12",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "typescript": "^3.7.5"
  }
